<div class='col-md-4 col-md-offset-4'>
  <div class='panel-heading'>
    <h2 class='panel-title text-center'>Sign up</h2>
  </div>

  <div class='panel-body'>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class='form-group'>
        <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email'  %>
      </div>
    
      <div class='form-group'>
        <% if @minimum_password_length %>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: 'off', class: 'form-control', placeholder: 'Password: 8символов минимум'%>
      </div>

      <div class='form-group'>
        <%= f.password_field :password_confirmation,autofocus: true, autocomplete: 'off' , class: 'form-control', placeholder: 'Password: повторите'%>
      </div>

      <div class='actions'>
        <%= f.submit 'Sign up', class: 'btn btn-primary' %>
      </div>
    <% end %>
    <%= render 'devise/shared/links' %>
  </div>
</div>
