.col-md-4.col-md-offset-4
  .text-center
    %h3
      - if params[:action] == 'new' || params[:action] == 'create'
        Новое хранилище
      - elsif params[:action] == 'edit' || params[:action] == 'update'
        = "Редактировать <b>#{@storage.title}</b>".html_safe

  = simple_form_for @storage, :url => @storage.id.present? ? storage_path : storages_path do |f|
    .form-group
      = f.text_field :title, placeholder: 'Название', class: 'form-control'
    .form-group
      = f.text_area :url, placeholder: 'Ссылка', class: 'form-control'
    .form-group.col-md-12
      .controls.text-center
        - if params[:action] == 'edit' || params[:action] == 'update'
          = f.submit 'Обновить', class: 'btn btn-warning'
        - else
          = f.submit 'Создать', class: 'btn btn-success'
