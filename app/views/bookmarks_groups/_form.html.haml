.col-md-4.col-md-offset-4
  .text-center
    %h3
      - if params[:action] == 'new' || params[:action] == 'create'
        New bookmarks group
      - elsif params[:action] == 'edit' || params[:action] == 'update'
        = "Edit <b>#{@bookmarks_group.name}</b>".html_safe

  = simple_form_for @bookmarks_group, :url => @bookmarks_group.id.present? ? bookmarks_group_path : bookmarks_groups_path do |f|
    .form-group
      = f.text_field :name, placeholder: :name, class: 'form-control'
    .form-group.col-md-12
      .controls.text-center
        - if params[:action] == 'edit' || params[:action] == 'update'
          = f.submit 'Update', class: 'btn btn-warning'
        - else
          = f.submit 'Create', class: 'btn btn-success'
