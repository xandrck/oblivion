.modal.fade{ id: "edit_modal_#{ obj.id }" }
  .modal-dialog
    .modal-content
      = simple_form_for obj, id: "form_modal_#{ obj.id }" do |f|
        .modal-header.well
          .modal-title.text-center.text-primary
            Edit name of Bookmark Group
            %button.close{ 'aria-hidden' => 'true', 'data-dismiss' => 'modal', type: 'button' } &times;
        .modal-body
          .h4 Please, write new name in field:

          = f.text_field :name, class: 'form-control', id: "field_modal_#{ obj.id }"
        .modal-footer
          .col-md-7
            = f.submit 'Update', class: 'btn btn-warning',id: "update_#{ obj.id }"

:javascript
  $( "form" ).submit(function( event ) {
    var elems = document.getElementById("#{"field_modal_#{ obj.id }"}")
    var el = elems.value
    if (el.replace(/\s/g,"") == ""){
      event.preventDefault();
      $("form").html('Invalid format of name!').add('errors');
      return false
      };
    });



