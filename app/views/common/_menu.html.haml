%nav.navbar.navbar-default.navbar-static-top
  .container
    .row
      .col-md-9
        %ul.nav.navbar-nav
          %li
            = link_to 'Home', root_path
          %li
            .dropdown
              %button.btn.btn-default.dropdown-toggle{ 'type' => 'button', 'id' => 'dropdownMenu1', 'data-toggle' => 'dropdown', 'aria-haspopup' => 'true', 'aria-expanded' => 'true' }
                Bookmark groups
                %span.caret
              %ul.dropdown-menu{ 'aria-labelledby' => 'dropdownMenu3' }
                %li
                  = link_to 'Bookmark groups list', bookmark_groups_path
                %li
                  = link_to 'Create bookmark group', new_bookmark_group_path
          %li
            .dropdown
              %button.btn.btn-default.dropdown-toggle{ 'type' => 'button', 'id' => 'dropdownMenu1', 'data-toggle' => 'dropdown', 'aria-haspopup' => 'true', 'aria-expanded' => 'true' }
                Закладки
                %span.caret
              %ul.dropdown-menu{ 'aria-labelledby' => 'dropdownMenu3' }
                %li
                  = link_to 'Bookmarks list', bookmarks_path
                %li
                  = link_to 'Create bookmark', new_bookmark_path if current_user.bookmark_groups.present?
      .col-md-3
        .dropdown
          %button.btn.btn-default.dropdown-toggle{ 'type' => 'button', 'id' => 'dropdownMenu1', 'data-toggle' => 'dropdown', 'aria-haspopup' => 'true', 'aria-expanded' => 'true' }
            = current_user.full_name
            %span.caret
          %ul.dropdown-menu{ 'aria-labelledby' => 'dropdownMenu3' }
            %li
              = link_to 'Settings', edit_user_path(current_user)
            %li.divider{ 'role' => 'separator' }
            %li
              = link_to 'Log out', destroy_user_session_path, data: { confirm: 'Are you sure want to log out?' }, method: :delete
